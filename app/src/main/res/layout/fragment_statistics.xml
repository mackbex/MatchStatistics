<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="summonerModel"
            type="com.match.statistics.domain.model.Summoner" />

        <variable
            name="viewModel"
            type="com.match.statistics.ui.statistics.StatisticsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pale_grey_two">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_profile"
            android:layout_width="match_parent"
            android:layout_height="251dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_user_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                app:layout_constraintEnd_toStartOf="@id/tv_user_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageView"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                tools:src="@color/darkish_pink" />


            <TextView
                android:layout_width="33dp"
                android:layout_height="20dp"
                android:layout_marginTop="62dp"
                android:background="@drawable/bg_level"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/img_user_icon"
                app:layout_constraintStart_toStartOf="@id/img_user_icon"
                app:layout_constraintTop_toTopOf="@id/img_user_icon"
                tools:text="247" />

            <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/dark_grey"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/img_user_icon"
                app:layout_constraintTop_toTopOf="@id/img_user_icon"
                tools:text="Genetory" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="89dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                app:backgroundTint="@color/soft_blue"
                app:layout_constraintStart_toStartOf="@id/tv_user_id"
                app:layout_constraintTop_toBottomOf="@id/tv_user_id"
                tools:text="전적갱신" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_rank_record"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:leagues="@{viewModel.userProfileState}"
                tools:listitem="@layout/item_leagues" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_statistics"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toBottomOf="@id/layout_profile">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_recent_20_games"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cool_grey"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="최근 20게임 분석" />

                <TextView
                    android:id="@+id/tv_wl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/tv_kda"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="2dp"
                    android:textSize="10sp"
                    tools:text="11승 9패"
                    android:textColor="@color/cool_grey"
                    />

                <TextView
                    android:id="@+id/tv_kda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/tv_kda_ratio"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="3dp"
                    android:textSize="14sp"
                    tools:text="5.9 / 6.8 / 14.1"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/charcoal_grey"
                    />
                <TextView
                    android:id="@+id/tv_kda_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="3.65:1 (66%)"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="10sp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_most"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toStartOf="@+id/layout_position"
                >
                <TextView
                    android:id="@+id/tv_most_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="모스트 승률"
                    android:textColor="@color/cool_grey"
                    android:textSize="10sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >
                    <TableRow
                        android:layout_marginBottom="5dp"
                        >
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="8dp"
                            android:src="@color/dark_grey"
                            app:shapeAppearanceOverlay="@style/circleImageView"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="8dp"
                            android:src="@color/dark_grey"
                            app:shapeAppearanceOverlay="@style/circleImageView"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/tv_most_1_win_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="42%"
                            android:textColor="@color/dark_grey"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:layout_marginHorizontal="8dp"

                            />
                        <TextView
                            android:id="@+id/tv_most_2_win_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="100%"
                            android:textColor="@color/dark_grey"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:layout_marginHorizontal="8dp"
                            />
                    </TableRow>
                </TableLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_position"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <TextView
                    android:id="@+id/tv_position_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="포지션"
                    android:textColor="@color/cool_grey"
                    android:textSize="10sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_position_title"
                    app:layout_constraintBottom_toTopOf="@+id/tv_win_rate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_lol_top"
                    />

                <TextView
                    android:id="@+id/tv_win_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="42%"
                    android:textColor="@color/dark_grey"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/layout_statistics"
            android:layout_marginTop="4dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/item_history"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>